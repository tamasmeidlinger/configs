{
  "workbench.statusBar.visible": false,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.fontWeight": "350",
  "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "editor.lineNumbers": "relative",
  "editor.semanticHighlighting.enabled": false,
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
  },

  // Use space as leader key
  "vim.leader": " ",

  // Enable EasyMotion
  "vim.easymotion": true,

  // Normal mode keybindings
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      // s → EasyMotion forward (1 char)
      "before": ["s"],
      "after": ["<leader>", "<leader>", "f"]
    },
    {
      // S → EasyMotion backward (1 char)
      "before": ["S"],
      "after": ["<leader>", "<leader>", "F"]
    },
    {
      // H → previous tab
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      // L → next tab
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      // <leader>b d → close current tab
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDelete": false,
  "diffEditor.wordWrap": "on",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "editor.allowVariableFonts": false,
  "editor.fontVariations": false,
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.colorCustomizations": {
    "editor.background": "#131313",
    "sideBar.background": "#171717",
    "editorGutter.background": "#131313",
    "tab.activeBackground": "#131313",
    "tab.inactiveBackground": "#1a1a1a",
    "tab.border": "#131313",
    "titleBar.activeBackground": "#131313",
    "titleBar.inactiveBackground": "#131313",
    "tab.activeForeground": "#ededed"
  },
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "editor.lineHeight": 1.35
}
